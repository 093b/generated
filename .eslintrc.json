{
    "env": {
        "mocha": true,
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    // ignore samples
    "ignorePatterns": [
      "samples/**/*",
      "test/fixtures/**/*"
    ],
    "rules": {
      "no-underscore-dangle": ["error", { "allow": ["_data"] }],
      "no-useless-escape": "off",
    }
}
